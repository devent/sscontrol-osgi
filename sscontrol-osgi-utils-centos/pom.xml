    <artifactId>sscontrol-osgi-utils-centos</artifactId>
    <name>sscontrol-osgi - utils-centos</name>
    <packaging>bundle</packaging>
    <description>CentOS utilities.</description>
    <url>https://javadoc.anrisoftware.com/${project.groupId}/${project.artifactId}/${project.version}/</url>

    <properties>
