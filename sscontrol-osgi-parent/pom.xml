<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.anrisoftware.globalpom</groupId>
        <artifactId>globalpom-groovy-osgi</artifactId>
        <version>2.2</version>
        <relativePath />
    </parent>

    <groupId>com.anrisoftware.sscontrol</groupId>
    <artifactId>sscontrol-osgi-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>sscontrol-osgi - parent</name>
    <inceptionYear>2016</inceptionYear>

    <properties>
        <project.custom.year>${project.inceptionYear}-2017</project.custom.year>
        <project.custom.source.source>1.7</project.custom.source.source>
        <project.custom.source.target>1.7</project.custom.source.target>
        <project.custom.bundle.namespace>com.anrisoftware.sscontrol</project.custom.bundle.namespace>
        <project.custom.bundle.namespace.internal>${project.custom.bundle.namespace}.internal</project.custom.bundle.namespace.internal>
        <project.custom.bundles.log.version>2.2</project.custom.bundles.log.version>
        <project.custom.bundles.resources.version>2.2-SNAPSHOT</project.custom.bundles.resources.version>
        <project.custom.bundles.globalpomutils.version>3.2-SNAPSHOT</project.custom.bundles.globalpomutils.version>
        <org.osgi.service.http.port>8080</org.osgi.service.http.port>
        <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
    </properties>

    <modules>
        <module>../sscontrol-osgi-scr-parent</module>
        <module>../sscontrol-osgi-shell-test</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <!-- globalpom -->
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpom-groovytestutils</artifactId>
                <version>2.1</version>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpom-log</artifactId>
                <version>${project.custom.bundles.log.version}</version>
                <type>bundle</type>
            </dependency>

            <!-- resources -->
            <dependency>
                <groupId>com.anrisoftware.resources</groupId>
                <artifactId>resources-api</artifactId>
                <version>${project.custom.bundles.resources.version}</version>
                <type>bundle</type>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.resources</groupId>
                <artifactId>resources-templates</artifactId>
                <version>${project.custom.bundles.resources.version}</version>
                <type>bundle</type>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.resources</groupId>
                <artifactId>resources-st</artifactId>
                <version>${project.custom.bundles.resources.version}</version>
                <type>bundle</type>
            </dependency>

            <!-- globalpomutils -->
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpomutils-core</artifactId>
                <version>${project.custom.bundles.globalpomutils.version}</version>
                <type>bundle</type>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpomutils-exec</artifactId>
                <version>${project.custom.bundles.globalpomutils.version}</version>
                <type>bundle</type>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpomutils-threads</artifactId>
                <version>${project.custom.bundles.globalpomutils.version}</version>
                <type>bundle</type>
            </dependency>
            <dependency>
                <groupId>com.anrisoftware.globalpom</groupId>
                <artifactId>globalpomutils-initfileparser</artifactId>
                <version>${project.custom.bundles.globalpomutils.version}</version>
                <type>bundle</type>
            </dependency>

            <!-- propertiesutils -->
            <dependency>
                <groupId>com.anrisoftware.propertiesutils</groupId>
                <artifactId>propertiesutils-contextproperties</artifactId>
                <version>2.1</version>
                <type>bundle</type>
            </dependency>

            <!-- other -->
            <dependency>
                <groupId>org.hamcrest</groupId>
                <artifactId>hamcrest-core</artifactId>
                <version>1.3</version>
            </dependency>
            <dependency>
                <groupId>org.hamcrest</groupId>
                <artifactId>hamcrest-all</artifactId>
                <version>1.3</version>
            </dependency>
            <dependency>
                <groupId>com.jcabi</groupId>
                <artifactId>jcabi-ssh</artifactId>
                <version>1.5.2</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <_include>osgi.bnd</_include>
                        <Export-Package>!${project.custom.bundle.namespace.internal}.*,${project.custom.bundle.namespace}.*;version="${project.version}"</Export-Package>
                        <Private-Package>${project.custom.bundle.namespace.internal}.*</Private-Package>
                    </instructions>
                </configuration>
            </plugin>

            <!-- Deactivate signing. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>local-tests</id>
            <properties>
                <project.custom.local.tests.enabled>true</project.custom.local.tests.enabled>
            </properties>
        </profile>
    </profiles>

</project>
