<configuration>

	<appender name="SYSERR" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
    		<level>INFO</level>
    		<onMatch>ACCEPT</onMatch>
    		<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>[%-5level] %d [%thread] %logger{0} - %msg%n%rEx{short}</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
	</appender>

   <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <prudent>true</prudent>
      <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
         <fileNamePattern>${java.io.tmpdir}/robobee-muellerpublic_de-%d{yyyy-MM-dd}_%i.log</fileNamePattern>
         <maxFileSize>1MB</maxFileSize>
         <maxHistory>30</maxHistory>
         <totalSizeCap>1GB</totalSizeCap>
      </rollingPolicy>
      <encoder>
            <pattern>[%-5level] %d [%thread] %logger{0} - %msg%n%rEx{short}</pattern>
            <immediateFlush>true</immediateFlush>
      </encoder>
   </appender>

	<root level="ERROR">
		<appender-ref ref="SYSERR" />
        <appender-ref ref="FILE" />
	</root>

    <logger name="org.perf4j.TimingLogger" level="INFO" />
    <logger name="com.anrisoftware" level="INFO" />
    <logger name="com.anrisoftware.globalpom.exec.scriptprocess" level="TRACE" />
    <logger name="com.anrisoftware.sscontrol" level="DEBUG" />
    <logger name="com.anrisoftware.sscontrol.shell.internal.scp" level="INFO" />
    <logger name="com.anrisoftware.sscontrol.k8s.fromrepository.script.linux.internal.script_1_13" level="TRACE" />

</configuration>
